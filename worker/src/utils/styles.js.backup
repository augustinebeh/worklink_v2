/**
 * Shared style utilities for Worker PWA
 * Centralized to avoid duplication across components
 *
 * NOTE: These utilities work alongside the CSS theme system in index.css.
 * For new components, prefer using CSS classes (.card, .hero-card, .list-item, etc.)
 * from index.css which automatically handle theme switching.
 *
 * These JS utilities are for cases where:
 * - Dynamic theme-based styling is needed with clsx
 * - Complex conditional styling based on component state
 * - Backward compatibility with existing components
 */

// Card styles - Use CSS class .card or .hero-card when possible
export const cardStyles = {
  // Base card - matches .card CSS class
  // Light theme: floating shadow cards (Modern SaaS style)
  // Dark theme: bordered cards
  base: (isDark) => isDark
    ? 'bg-dark-900/50 border-white/5'
    : 'bg-white shadow-[0_4px_20px_rgba(0,0,0,0.05)]',

  rounded: (isDark) => `p-4 rounded-2xl transition-all ${isDark ? 'border border-white/5 bg-dark-900/50' : 'bg-white shadow-[0_4px_20px_rgba(0,0,0,0.05)]'}`,

  roundedXl: (isDark) => `p-4 rounded-xl ${isDark ? 'border border-white/5 bg-dark-900/50' : 'bg-white shadow-[0_4px_20px_rgba(0,0,0,0.05)]'}`,

  // Hero/balance card - matches .hero-card CSS class
  // Light theme: Electric Blue gradient (Modern SaaS)
  hero: (isDark) => isDark
    ? 'bg-gradient-to-br from-[#0a1628] via-[#0d1f3c] to-[#0f2847] border-white/5'
    : 'bg-gradient-to-br from-[#007AFF] via-[#0062FF] to-[#0055EB] shadow-[0_15px_50px_rgba(0,122,255,0.25)]',

  // Accent/promo card - matches .promo-card CSS class
  accent: (isDark) => isDark
    ? 'bg-gradient-to-br from-accent-900/30 to-accent-800/10 border-accent-500/20'
    : 'bg-gradient-to-br from-emerald-50 to-teal-50 shadow-[0_4px_20px_rgba(0,0,0,0.05)]',

  // Secondary card for less prominent areas
  secondary: (isDark) => isDark
    ? 'bg-dark-800/50 border-white/5'
    : 'bg-[#F5F7FA] shadow-[0_2px_10px_rgba(0,0,0,0.03)]',
};

