# NPM Configuration for WorkLink V2
# Prevents hanging and speeds up installs

# Use cache aggressively
prefer-offline=true
# cache-min deprecated in favor of prefer-offline

# Disable auditing (can hang)
audit=false
fund=false

# Faster registry
registry=https://registry.npmjs.org/

# Network timeouts
fetch-timeout=60000
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Legacy peer deps (avoid conflicts)
legacy-peer-deps=true

# Progress display
progress=true
loglevel=warn

# Concurrency
maxsockets=5
